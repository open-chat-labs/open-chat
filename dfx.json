{
  "canisters": {
    "root": {
      "type": "custom",
      "candid": "backend/canisters/root/api/can.did",
      "wasm": "target/wasm32-unknown-unknown/release/root_canister_impl-opt.wasm.gz",
      "build": "./generate-wasm.sh root_canister_impl"
    },
    "user_index": {
      "type": "custom",
      "candid": "backend/canisters/user_index/api/can.did",
      "wasm": "target/wasm32-unknown-unknown/release/user_index_canister_impl-opt.wasm.gz",
      "build": "./generate-wasm.sh user_index_canister_impl"
    },
    "group_index": {
      "type": "custom",
      "candid": "backend/canisters/user_index/api/can.did",
      "wasm": "target/wasm32-unknown-unknown/release/group_index_canister_impl-opt.wasm.gz",
      "build": "./generate-wasm.sh group_index_canister_impl"
    },
    "notifications": {
      "type": "custom",
      "candid": "backend/canisters/notifications/api/can.did",
      "wasm": "target/wasm32-unknown-unknown/release/notifications_canister_impl-opt.wasm.gz",
      "build": "./generate-wasm.sh notifications_canister_impl"
    },
    "online_users_aggregator": {
      "type": "custom",
      "candid": "backend/canisters/online_users_agg/api/can.did",
      "wasm": "target/wasm32-unknown-unknown/release/online_users_aggregator_canister_impl-opt.wasm.gz",
      "build": "./generate-wasm.sh online_users_aggregator_canister_impl"
    },
    "callback": {
      "type": "custom",
      "candid": "backend/canisters/callback/api/can.did",
      "wasm": "target/wasm32-unknown-unknown/release/callback_canister_impl-opt.wasm.gz",
      "build": "./generate-wasm.sh callback_canister_impl"
    },
    "user": {
      "type": "custom",
      "candid": "backend/canisters/user/api/can.did",
      "wasm": "target/wasm32-unknown-unknown/release/user_canister_impl-opt.wasm",
      "build": "./generate-wasm.sh user_canister_impl"
    },
    "group": {
      "type": "custom",
      "candid": "backend/canisters/group/api/can.did",
      "wasm": "target/wasm32-unknown-unknown/release/group_canister_impl-opt.wasm",
      "build": "./generate-wasm.sh group_canister_impl"
    },
    "website": {
      "source": ["frontend/build", "frontend/public"],
      "type": "assets"
    },
    "ledger": {
      "type": "custom",
      "wasm": "backend/canisters/ledger/ledger.wasm",
      "candid": "backend/canisters/ledger/ledger.private.did"
    }
  },
  "defaults": {
    "build": {
      "packtool": ""
    },
    "replica": {
      "subnet_type": "verifiedapplication"
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:8000",
      "type": "ephemeral"
    },
    "ic": {
      "providers": [
        "https://ic0.app/"
      ],
      "type": "persistent"
    },
    "ic_test": {
      "providers": [
        "https://ic0.app/"
      ],
      "type": "persistent"
    }
  },
  "version": 1
}
