{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "INTERNET_IDENTITY",
    "NFID_URL",
    "DFX_NETWORK",
    "IC_URL",
    "II_DERIVATION_ORIGIN",
    "CUSTOM_DOMAINS",
    "STORAGE_INDEX_CANISTER",
    "LEDGER_CANISTER_ICP",
    "LEDGER_CANISTER_SNS1",
    "LEDGER_CANISTER_BTC",
    "LEDGER_CANISTER_CHAT",
    "BLOB_URL_PATTERN",
    "OPENCHAT_WEBSITE_VERSION",
    "NODE_ENV",
    "USERGEEK_APIKEY",
    "METERED_APIKEY",
    "ROLLBAR_ACCESS_TOKEN",
    "TRANSLATE_API_KEY",
    "PUBLIC_TRANSLATE_API_KEY",
    "GIPHY_APIKEY"
  ],
  "pipeline": {
    "build": {
      "outputs": ["lib/**", "build/**"],
      "dependsOn": ["^build"]
    },
    "build:ci": {
      "outputs": ["lib/**", "build/**"],
      "dependsOn": ["build", "typecheck", "validate", "lint", "test"]
    },

    "deploy:prod_test": {
      "outputs": ["lib/**", "build/**"],
      "dependsOn": [
        "typecheck:prod_test",
        "validate:prod_test",
        "lint",
        "test:prod_test"
      ]
    },
    "build:prod_test": {
      "outputs": ["lib/**", "build/**"],
      "dependsOn": ["^build:prod_test"]
    },
    "test:prod_test": {
      "dependsOn": ["build:prod_test"],
      "outputs": [],
      "inputs": ["src/**/*.ts"]
    },
    "typecheck:prod_test": {
      "dependsOn": ["build:prod_test"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "src/**/*.svelte"]
    },
    "validate:prod_test": {
      "dependsOn": ["build:prod_test"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "src/**/*.svelte"]
    },

    "deploy:prod": {
      "outputs": ["lib/**", "build/**"],
      "dependsOn": ["typecheck:prod", "validate:prod", "lint", "test:prod"]
    },

    "build:prod": {
      "outputs": ["lib/**", "build/**"],
      "dependsOn": ["^build:prod"]
    },
    "test:prod": {
      "dependsOn": ["build:prod"],
      "outputs": [],
      "inputs": ["src/**/*.ts"]
    },
    "typecheck:prod": {
      "dependsOn": ["build:prod"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "src/**/*.svelte"]
    },
    "validate:prod": {
      "dependsOn": ["build:prod"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "src/**/*.svelte"]
    },

    "deploy:testnet": {
      "outputs": ["lib/**", "build/**"],
      "dependsOn": [
        "typecheck:testnet",
        "validate:testnet",
        "lint",
        "test:testnet"
      ]
    },

    "build:testnet": {
      "outputs": ["lib/**", "build/**"],
      "dependsOn": ["^build:testnet"]
    },
    "test:testnet": {
      "dependsOn": ["build:testnet"],
      "outputs": [],
      "inputs": ["src/**/*.ts"]
    },
    "typecheck:testnet": {
      "dependsOn": ["build:testnet"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "src/**/*.svelte"]
    },
    "validate:testnet": {
      "dependsOn": ["build:testnet"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "src/**/*.svelte"]
    },

    "dev": {
      "dependsOn": ["build"],
      "cache": false
    },

    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["src/**/*.ts"]
    },
    "typecheck": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "src/**/*.svelte"]
    },
    "validate": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "src/**/*.svelte"]
    },

    "lint": {
      "outputs": [],
      "inputs": ["src/**/*.ts", "src/**/*.svelte"]
    }
  }
}
