{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "outDir": "build", // prevents "cannot overwrite file" errors in IDE
        "module": "ES2022",
        "allowJs": true,
        "checkJs": false,
        "declaration": true,
        "experimentalDecorators": true,
        "lib": ["DOM", "DOM.Iterable", "es2020", "WebWorker"],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "sourceMap": false,
        "target": "ES2022",
        "types": ["jest", "node", "svelte"],
        "useDefineForClassFields": false,
        "verbatimModuleSyntax": true,
    },
    "exclude": [
        "build/**/*",
        "lib/**/*",
        "node_modules",
    ]
}
