{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "build/out",
        "isolatedModules": true,
        "tsBuildInfoFile": null,
        "paths": {
            "@src/*": ["./src/*"],
            "@actions/*": ["./src/actions/*"],
            "@i18n/*": ["./src/i18n/*"],
            "@stores/*": ["./src/stores/*"],
            "@theme/*": ["./src/theme/*"],
            "@utils/*": ["./src/utils/*"],
            "@styles/*": ["./src/styles/*"],
            "@component-lib/*": ["../component-lib/src/*"]
        }
    },
    "include": ["./src/**/*", "../vite-env.d.ts", "../node_modules/component-lib/src/**/*.ts"],
    "exclude": ["build/**/*", "node_modules"]
}
