{
    "include": ["src/**/*"],
    "exclude": ["node_modules/*", "public/*"],
    "compilerOptions": {
        "moduleResolution": "node",
        "importsNotUsedAsValues": "remove",
        "esModuleInterop": true,
        "isolatedModules": false,
        "lib": [
            "dom",
            "es2015",
            "es2017",
            "es2020",
            "DOM",
            "ScriptHost",
            "DOM.Iterable",
            "WebWorker"
        ],
        "target": "es2020",
        "module": "es2020",
        "rootDir": ".",
        "types": ["node"]
    }
}
