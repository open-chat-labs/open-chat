{
    "name": "openchat-shared",
    "version": "1.0.0",
    "description": "Typescript library defining the OpenChat domain",
    "main": "lib/index.js",
    "scripts": {
        "build": "tsc",
        "dev": "tsc -w",
        "wait": "rm -rf lib && wait-on lib/index.js",
        "typecheck": "tsc --noEmit",
        "typecheck:watch": "tsc --noEmit -w",
        "test": "jest --detectOpenHandles --runInBand",
        "test:watch": "jest --watch --detectOpenHandles --runInBand",
        "lint": "eslint ./src --fix"
    },
    "author": "julian.jelfs@gmail.com",
    "dependencies": {
        "@dfinity/agent": "^0.15.6",
        "@dfinity/auth-client": "^0.15.6",
        "@dfinity/candid": "^0.15.6",
        "@dfinity/identity": "^0.15.6",
        "@dfinity/principal": "^0.15.6",
        "drange": "^2.0.1",
        "idb": "^6.1.5",
        "identicon.js": "^2.3.3",
        "md5": "^2.3.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.17.9",
        "@babel/preset-env": "^7.16.11",
        "@testing-library/jest-dom": "^5.16.4",
        "@types/identicon.js": "^2.3.1",
        "@types/jest": "^29.1.2",
        "@types/md5": "^2.3.2",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "babel-jest": "^29.0.2",
        "babel-loader": "^8.2.4",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^3.4.1",
        "jest": "^29.0.2",
        "jest-environment-jsdom": "^29.0.2",
        "process": "^0.11.10",
        "ts-jest": "^29.0.0",
        "wait-on": "^7.0.1"
    }
}
