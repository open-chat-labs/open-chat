{
    "name": "openchat-shared",
    "version": "1.0.0",
    "description": "Typescript library defining the OpenChat domain",
    "main": "lib/index.js",
    "scripts": {
        "build": "tsc",
        "build:prod_test": "tsc",
        "build:prod": "tsc",
        "dev": "tsc -w",
        "typecheck": "tsc --noEmit",
        "typecheck:watch": "tsc --noEmit -w",
        "test": "jest --detectOpenHandles --runInBand",
        "test:watch": "jest --watch --detectOpenHandles --runInBand",
        "lint": "eslint ./src --fix"
    },
    "author": "julian.jelfs@gmail.com",
    "dependencies": {
        "@dfinity/agent": "^0.14.0",
        "@dfinity/auth-client": "^0.14.0",
        "@dfinity/candid": "^0.14.0",
        "@dfinity/identity": "^0.14.0",
        "@dfinity/principal": "^0.14.0",
        "@open-ic/open-storage-agent": "^0.1.6",
        "drange": "^2.0.1",
        "idb": "^6.1.5",
        "identicon.js": "^2.3.3",
        "md5": "^2.3.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.17.9",
        "@babel/preset-env": "^7.16.11",
        "@testing-library/jest-dom": "^5.16.4",
        "@types/identicon.js": "^2.3.1",
        "@types/jest": "^29.1.2",
        "@types/md5": "^2.3.2",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "babel-jest": "^29.0.2",
        "babel-loader": "^8.2.4",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^3.4.1",
        "jest": "^29.0.2",
        "jest-environment-jsdom": "^29.0.2",
        "process": "^0.11.10",
        "ts-jest": "^29.0.0"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "fakeTimers": {
            "enableGlobally": true
        },
        "transform": {
            "^.+\\.ts$": "ts-jest",
            "^.+\\.js$": "babel-jest"
        },
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "moduleNameMapper": {
            "@open-ic/open-storage-agent": "<rootDir>/src/dummyModule.js",
            "idb": "<rootDir>/src/dummyModule.js",
            "../utils/notifications": "<rootDir>/src/dummyNotifications.js"
        }
    }
}
