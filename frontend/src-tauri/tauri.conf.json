{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "OpenChat",
    "version": "0.1.0",
    "identifier": "com.oc.app",
    "build": {
        "frontendDist": "../app/build",
        "devUrl": "http://localhost:5003",
        "beforeDevCommand": "echo 'Make sure dev server is running'",
        "beforeBuildCommand": "echo '`npm run build:mobile` not setup yet' && exit 1"
    },
    "app": {
        "windows": [
            {
                "title": "OpenChat",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "plugins": {
        "deep-link": {
            "mobile": [{ "schema": "openchat", "host": "oc.app" }]
        }
    }
}
