{
    "name": "openchat-client",
    "version": "1.0.0",
    "description": "Typescript library for interacting with the OpenChat backend",
    "main": "lib/index.js",
    "type": "module",
    "scripts": {
        "build": "npm run clean && tsc",
        "build:docker": "npm run build",
        "dev": "npm run clean && tsc -w",
        "dev:mobile": "npm run dev",
        "wait": "npm run clean && wait-on lib/index.js",
        "clean": "rm -rf lib",
        "typecheck": "tsc --noEmit",
        "typecheck:watch": "tsc --noEmit -w",
        "test": "vitest --run",
        "test:watch": "vitest",
        "lint": "eslint ./src --fix"
    },
    "author": "julian.jelfs@gmail.com",
    "dependencies": {
        "@dfinity/agent": "^3.0.0-beta.0",
        "@dfinity/auth-client": "^3.0.0-beta.0",
        "@dfinity/candid": "^3.0.0-beta.0",
        "@dfinity/identity": "^3.0.0-beta.0",
        "@dfinity/principal": "^3.0.0-beta.0",
        "borc": "^3.0.0",
        "dequal": "^2.0.3",
        "drange": "^2.0.1",
        "identicon.js": "^2.3.3",
        "md5": "^2.3.0",
        "openchat-shared": "*",
        "peerjs": "^1.4.7",
        "svelte-i18n": "^4.0.1",
        "tauri-plugin-oc-api": "file:../tauri-plugin-oc",
        "usergeek-ic-js": "^1.0.6"
    },
    "devDependencies": {
        "@sveltejs/vite-plugin-svelte": "^5.0.3",
        "@testing-library/jest-dom": "^6.0.0",
        "@types/identicon.js": "^2.3.1",
        "@types/jest": "^29.5.3",
        "@types/md5": "^2.3.2",
        "@typescript-eslint/eslint-plugin": "^6.4.0",
        "@typescript-eslint/parser": "^6.4.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "svelte": "^5.25.3",
        "typescript": "=5.4.2",
        "vitest": "^3.1.1",
        "wait-on": "^7.0.1"
    }
}
