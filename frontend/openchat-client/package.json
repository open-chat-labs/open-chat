{
    "name": "openchat-client",
    "version": "1.0.0",
    "description": "Typescript library for interacting with the OpenChat backend",
    "main": "lib/index.js",
    "scripts": {
        "build": "rollup -c",
        "build:prod_test": "rollup -c",
        "build:prod": "rollup -c",
        "dev": "rollup -c -w",
        "typecheck": "tsc --noEmit",
        "typecheck:watch": "tsc --noEmit -w",
        "test": "jest --detectOpenHandles --runInBand",
        "test:watch": "jest --watch --detectOpenHandles --runInBand",
        "lint": "eslint ./src --fix"
    },
    "author": "julian.jelfs@gmail.com",
    "dependencies": {
        "@dfinity/agent": "^0.15.5",
        "@dfinity/auth-client": "^0.15.5",
        "@dfinity/candid": "^0.15.5",
        "@dfinity/identity": "^0.15.5",
        "@dfinity/principal": "^0.15.5",
        "@fingerprintjs/botd": "^1.1.0",
        "drange": "^2.0.1",
        "identicon.js": "^2.3.3",
        "md5": "^2.3.0",
        "openchat-worker": "*",
        "openchat-shared": "*",
        "peerjs": "^1.4.7",
        "svelte": "^3.51.0",
        "svelte-i18n": "^3.4.0",
        "usergeek-ic-js": "git+https://github.com/hpeebles/usergeek-ic-js.git#d00643807272a657cf546d34f5a983c593fc38f5",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.17.9",
        "@babel/preset-env": "^7.16.11",
        "@rollup/plugin-alias": "^3.1.9",
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^11.0.0",
        "@rollup/plugin-replace": "^2.4.2",
        "@rollup/plugin-typescript": "^8.3.1",
        "@testing-library/jest-dom": "^5.16.4",
        "@types/identicon.js": "^2.3.1",
        "@types/jest": "^29.1.2",
        "@types/md5": "^2.3.2",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "babel-jest": "^29.0.2",
        "babel-loader": "^8.2.4",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^3.4.1",
        "jest": "^29.0.2",
        "jest-environment-jsdom": "^29.0.2",
        "process": "^0.11.10",
        "rollup": "^2.70.1",
        "rollup-plugin-analyzer": "^4.0.0",
        "rollup-plugin-cleaner": "^1.0.0",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-dev": "^2.0.4",
        "rollup-plugin-filesize": "^9.1.2",
        "rollup-plugin-inject": "^3.0.2",
        "rollup-plugin-inject-process-env": "^1.3.1",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-postcss": "^4.0.2",
        "rollup-plugin-svelte": "^7.0.0",
        "rollup-plugin-terser": "^7.0.0",
        "ts-jest": "^29.0.0"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "fakeTimers": {
            "enableGlobally": true
        },
        "transform": {
            "^.+\\.ts$": "ts-jest",
            "^.+\\.js$": "babel-jest"
        },
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "moduleNameMapper": {
            "peerjs": "<rootDir>/src/dummyModule.js",
            "openchat-shared": "<rootDir>/src/dummyModule.js",
            "idb": "<rootDir>/src/dummyModule.js",
            "../utils/notifications": "<rootDir>/src/dummyNotifications.js"
        }
    }
}
