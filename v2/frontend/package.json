        "moduleFileExtensions": [
            "js",
            "ts",
            "svelte"
        ],
        "moduleNameMapper": {
            "svelte-spa-router": "<rootDir>/src/dummyModule.js",
            "stores/background": "<rootDir>/src/dummyModule.js",
            "idb": "<rootDir>/src/dummyModule.js"
