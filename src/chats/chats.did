type Message =
    record {
        id: nat32;
        timestamp: nat64;
        sender: principal;
        text: text;
    };

type ChatSummary =
    variant {
        Direct: DirectChatSummary;
        Group: GroupChatSummary
    };

type DirectChatSummary =
    record {
        id: nat64;
        them: principal;
        unread: nat32;
        latest_message: Message;
    };

type GroupChatSummary =
    record {
        id: nat64;
        subject: text;
        updated_date: nat64;
        participants: vec principal;
        unread: nat32;
        latest_message: opt Message;
    };

service : {
    create_direct_chat: (principal, text) -> (opt nat64);
    send_message: (nat64, text) -> (opt nat32);
    mark_read: (nat64, nat32) -> (opt nat32);
    get_messages: (nat64, nat32) -> (opt vec Message) query;
    list_chats: () -> (vec ChatSummary) query;

    create_group_chat: (vec principal, text) -> (opt nat64);
    add_participants: (nat64, vec principal) -> (opt nat16);
    remove_participant: (nat64, principal) -> (opt bool);
}